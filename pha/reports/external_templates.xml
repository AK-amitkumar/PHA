<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_pha">
        <div class="header o_background_header" >
            <div  >
                <div class="col-xs-7 col-xs-offset-1">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"/>
                </div>
                <div class="col-xs-5 text-center" name="company_address">
                    <div>
                        <span>
                            <t t-esc="company.partner_id.street"/> - <t t-esc="company.partner_id.zip"/>
                            <t t-esc="company.partner_id.street2"/> - <t t-esc="company.partner_id.country_id.name"/>
                        </span>
                    </div>
                    <div>
                        <span >
                            <t t-esc="company.partner_id.phone"/> - <t t-esc="company.partner_id.email"/>
                        </span>
                    </div>
                    <div>
                        <span >
                            <strong>
                                <t t-esc="company.partner_id.website"/>
                            </strong>
                        </span>
                    </div>
                </div>

            </div>
        </div>

        <div class="article o_report_layout_boxed">
          <t t-raw="0" />
        </div>

        <div class="footer o_boxed_footer">
            <div class="text-center">
                <ul class="list-inline">
                    <!--<li t-if="company.phone">Tel: <span t-field="company.phone"/></li>-->
                    <!--<li t-if="company.email">Mail: <span t-field="company.email"/></li>-->
                    <!--<li t-if="company.website">Web: <span t-field="company.website"/></li>-->
                    <!--<li t-if="company.vat"><t t-esc="company.country_id.vat_label or 'TIN'"/>: <span t-field="company.vat"/></li>-->
                </ul>
                <div t-field="company.report_footer"/>
                <div>
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

    <template id="external_layout_inh" inherit_id="web.external_layout">
        <xpath expr="." position="inside">
             <t t-if="company.external_report_layout == 'pha'">
                <t t-call="pha.external_layout_pha"><t t-raw="0"/></t>
            </t>
        </xpath>
    </template>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="pha_report_invoice_inherit" inherit_id="account.report_invoice_document">
        <!--<xpath expr="//h2[1]" position="replace"></xpath>-->
        <xpath expr="//div[@class='row'][1]" position="after">
            <div class="row">
                <div class="col-xs-6" style="margin-top:20px;">
                    <strong>Vos References:</strong>
                    <address t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@class='row mt32 mb32']" position="replace">
            <div class="row mt32 mb32">
                <div class="col-xs-2">
                    <strong>Date:</strong>
                    <p t-field="o.date_invoice"/>
                </div>
                <div class="col-xs-2">
                    <strong>N° Client:</strong>
                    <p t-field="o.partner_id.ref"/>
                </div>
                <div name='reference' class="col-xs-2">
                    <strong>N/Ref:</strong>
                    <p t-field="o.reference"/>
                </div>
                <div class="col-xs-2">
                    <strong>N/BL:</strong>
                    <p t-field="o.name"/>
                </div>
                <div class="col-xs-2">
                    <strong>V/N°TVA:</strong>
                    <p t-field="o.partner_id.vat"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//table[@name='invoice_line_table']" position="replace">
            <table class="table table-condensed" name="invoice_line_table">
                <thead>
                    <tr>
                        <th>Reference</th>
                        <th>Description</th>
                        <th class="text-right">Qty</th>
                        <th class="text-right">Unit Price</th>
                        <!--<th class="text-right">Taxes</th>-->
                        <th class="text-right">Price</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-foreach="o.invoice_line_ids" t-as="l">
                        <tr>
                            <td>
                                <span t-field="l.sale_line_ids.sale_product_ref"/>
                            </td>
                            <td>
                                <span t-field="l.name"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.quantity"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_unit"/>
                            </td>
                            <!--<td class="text-right">-->
                                <!--<span t-esc="', '.join(map(lambda x: x.description or x.name, l.invoice_line_tax_ids))"/>-->
                            <!--</td>-->
                            <td class="text-right" groups="sale.group_show_price_subtotal">
                                <span t-field="l.price_subtotal"
                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </t>

                </tbody>
            </table>
        </xpath>
    </template>

</odoo>

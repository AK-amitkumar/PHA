<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="product_template_only_form_view" model="ir.ui.view">
            <field name="name">product.template.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']" position="after">
                    <page name="Calculette" string="Calculette">
                        <field name="prix_achat_ttc_hide"  attrs="{'invisible':True}"/>
                        <field name="taux_marque_hide" attrs="{'invisible':True}"/>
                        <field name="montant_marge_hide" attrs="{'invisible':True}"/>
                        <field name="coef_multi_hide" attrs="{'invisible':True}"/>
                        <group col="8">
                            <field name="prix_achat_ht"/>
                            <field name="prix_achat_ttc_hide" string="TTC :"/>
                            <field name="taux_tva"/>
                        </group>
                          <group col="8">
                            <field name="interaction_devise_ht"/>
                            <field name="interaction_devise_ttc" string="TTC :"/>
                            <field name="taux_marge"/>
                        </group>

                           <group col="8">
                            <field name="remise_comerciale_ht"/>
                            <field name="remise_comerciale_ttc" string="TTC :"/>
                            <field name="taux_marque"/>
                        </group>

                        <group col="8">
                            <field name="frais_transport_ht"/>
                            <field name="frais_transport" string="TTC :"/>
                            <field name="coef_multi"/>
                        </group>


                        <group col="8">
                            <field name="cout_packaging_ht" />
                             <field name="cout_packaging_ttc" />
                               <field name="montant_marge" />
                        </group>

                         <group col="8">
                            <field name="cout_main_oeuvre_ht" />
                             <field name="cout_main_oeuvre_ttc" />
                               <field name="montant_marge_net" />
                        </group>
                         <group col="4">
                            <field name="autre_cout_ht" />
                             <field name="autre_cout_ttc" />
                        </group>
                          <group col="4">
                            <field name="prix_achat_ttc" string="Cout de revient HT"/>
                                  <field name="prix_achat_ht" string="TTC :"/>
                        </group>
                        <group col="4">
                            <field name="prix_vente_ht" readonly="1"/>
                            <field name="prix_vente_ttc" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
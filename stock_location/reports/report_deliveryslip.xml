<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_delivery_document_inherit_sale_stock" inherit_id="sale_stock.report_delivery_document_inherit_sale_stock">
            <xpath expr="//div[@class='row']" position="replace">
                <div class="row" name="customer_address">
                    <div class="col-xs-6" style="margin-top:20px;">
                        <strong>Customer Reference:</strong>
                        <p t-field="o.sale_id.client_order_ref"/>
                        <t t-if="o.contact_id">
                            <div t-field="o.contact_id" t-options='{"widget": "contact", "fields": ["name", "phone", "mobile", "email"], "no_marker": False}'/>
                        </t>

                    </div>
                    <div class="col-xs-6">
                        <div>
                            <span><strong>Customer Address:</strong></span>
                        </div>
                        <div t-if="o.move_lines and o.move_lines[0].partner_id" name="partner_header">
                            <div t-field="o.move_lines[0].partner_id"
                               t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                        </div>
                        <div t-if="not (o.move_lines and o.move_lines[0].partner_id) and o.partner_id" name="partner_header">
                            <div t-field="o.partner_id"
                               t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                        </div>
                    </div>

                </div>
            </xpath>
            <xpath expr="//div[@t-if='o.sale_id.client_order_ref']" position="replace" />

        </template>
        <template id="spr_report_delivery_document" inherit_id="stock.report_delivery_document">
            <xpath expr="//table[3]/thead/tr/th[1]" position="after">
                <th t-if="o.picking_type_id.code != 'outgoing'" width="15%">Localisation</th>
            </xpath>
            <xpath expr="//table[3]/tbody/tr/td[1]" position="after">
                  <td  t-if="o.picking_type_id.code != 'outgoing'">
                      <span t-field="move_line.move_id.product_id.location"/>
                </td>
            </xpath>

            <xpath expr="//table[2]/thead/tr/th[1]" position="after">
                <th t-if="o.picking_type_id.code != 'outgoing'">Localisation</th>
            </xpath>
            <xpath expr="//table[2]/tbody/tr/td[1]" position="after">
                <td t-if="o.picking_type_id.code != 'outgoing'">

                    <span t-field="move.product_id.location"/>
                </td>
            </xpath>
        </template>
    </data>
</odoo>